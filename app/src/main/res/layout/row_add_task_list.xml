<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/txtTaskListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_bottom_border_layout"
        android:gravity="end|center">

        <TextView
            android:id="@+id/txtTaskListName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_bold"
            android:padding="@dimen/txt_padding"
            android:text="@string/task_list"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:background="@drawable/view_bottom_border"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/parent_task_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_margin_top_txt"
        android:layout_marginStart="@dimen/txt_size"
        android:layout_marginEnd="@dimen/txt_size"
        app:layout_constraintTop_toBottomOf="@+id/txtTaskListLayout"
        android:gravity="end|center"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/txtAddListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/res_margin_top_txt"
        app:layout_constraintTop_toBottomOf="@+id/parent_task_layout"
        android:gravity="start|center"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtAddTask"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/quicksand_bold"
            android:gravity="center"
            android:text="@string/add_task"
            android:textColor="@color/colorTextLink"
            tools:ignore="OnClick" />

    </LinearLayout>

</LinearLayout>